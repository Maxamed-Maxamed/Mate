<!-- res/layout/hydrate_goal_form.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Goal Amount (in milliliters) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/goalAmountInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter goal amount (ml)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/goalAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- User ID -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userIdInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter user ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalAmountInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Achievement Status -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/achievementCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achieved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userIdInputLayout" />

    <!-- Button to submit the form -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achievementCheckBox" />
</androidx.constraintlayout.widget.ConstraintLayout>